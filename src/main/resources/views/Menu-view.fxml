<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="apMain" prefHeight="480.0" prefWidth="720.0" stylesheets="@../com/project/cwmsgradle/styles.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.cwmsgradle.controlls.MenuViewController">
    <children>
        <Label fx:id="menuLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="278.0" layoutY="20.0"
               prefHeight="83.0" prefWidth="173.0" text="Menu" underline="true"/>
        <SplitPane fx:id="spMenu" layoutX="241.0" layoutY="104.0" prefHeight="314.0" prefWidth="247.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="337.0" prefWidth="173.0">
                    <children>
                        <Button fx:id="manageVehiclesButton" layoutX="23.0" layoutY="47.0"
                                onAction="#onManageVehiclesButtonClick" prefHeight="45.0" prefWidth="200.0"
                                text="Zarządzaj pojazdami"/>
                        <Button fx:id="manageClientsButton" alignment="CENTER" contentDisplay="CENTER" layoutX="23.0"
                                layoutY="108.0" prefHeight="45.0" prefWidth="200.0" text="Zarządzaj klientami"/>
                        <Button fx:id="manageRepairsButton" layoutX="23.0" layoutY="168.0" prefHeight="45.0"
                                prefWidth="200.0" text="Zarządzaj naprawami"/>
                        <Button fx:id="exitButton" layoutX="73.0" layoutY="263.0" onAction="#onExitButtonClick"
                                prefHeight="35.0" prefWidth="100.0" text="Wyloguj"/>
                        <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="34.0" layoutY="120.0">
                            <image>
                                <Image url="@../icons/klient.png"/>
                            </image>
                        </ImageView>
                        <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="34.0" layoutY="59.0">
                            <image>
                                <Image url="@../icons/auto.png"/>
                            </image>
                        </ImageView>
                        <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="34.0" layoutY="180.0">
                            <image>
                                <Image url="@../icons/naprawa.png"/>
                            </image>
                        </ImageView>

                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
