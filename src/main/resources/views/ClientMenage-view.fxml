<AnchorPane prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.cwmsgradle.controlls.ClientMenageController">
    <children>
        <Label fx:id="usernameLabelClient" layoutX="601.0" layoutY="21.0" prefHeight="21.0" prefWidth="104.0" stylesheets="@../com/project/cwmsgradle/styles.css" text="Username" />
        <ImageView fitHeight="45.0" fitWidth="45.0" layoutX="20.0" layoutY="9.0">
            <image>
                <Image url="@../icons/klient.png" />
            </image>
        </ImageView>
        <Label fx:id="labelClientMenage" alignment="CENTER" layoutX="65.0" layoutY="14.0" prefHeight="35.0" prefWidth="175.0" stylesheets="@../com/project/cwmsgradle/styles.css" text="Zarządzaj klientami" />
        <VBox fx:id="vbClientMenage" alignment="TOP_CENTER" layoutX="26.0" layoutY="60.0" prefHeight="400.0" prefWidth="175.0" stylesheets="@../com/project/cwmsgradle/styles.css" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddClientButtonClick" prefHeight="35.0" prefWidth="150.0" text="Dodaj Klienta">
                    <VBox.margin>
                        <Insets top="65.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEditClientButtonClick" prefHeight="35.0" prefWidth="150.0" text="Edytuj">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="deleteButton" onAction="#onDeleteClientButtonClick" mnemonicParsing="false" prefHeight="35.0" prefWidth="150.0" text="Usuń klienta">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#onGoBackButtonClick" prefHeight="25.0" prefWidth="60.0" text="Powrót">
                    <VBox.margin>
                        <Insets top="65.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <HBox fx:id="hbCliMen" alignment="CENTER" layoutX="213.0" layoutY="60.0" prefHeight="400.0" prefWidth="490.0" stylesheets="@../com/project/cwmsgradle/styles.css" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <TableView fx:id="clientTableView" prefHeight="362.0" prefWidth="458.0">
