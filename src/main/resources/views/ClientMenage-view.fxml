                        <TableColumn fx:id="clientIdColumn" prefWidth="91.0" text="ID Klienta" />
                        <TableColumn fx:id="nameColumn" prefWidth="91.0" text="Imie" />
                        <TableColumn fx:id="surnameColumn" prefWidth="91.0" text="Nazwisko" />
                        <TableColumn fx:id="phoneColumn" prefWidth="91.0" text="Nr. Telefonu" />
                        <TableColumn fx:id="mailColumn" prefWidth="91.0" text="E-mail" />
                    </columns>
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </TableView>
            </children>
        </HBox>
      <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="573.0" layoutY="21.0">
         <image>
            <Image url="@../icons/user.png" />
         </image>
      </ImageView>
    </children>
